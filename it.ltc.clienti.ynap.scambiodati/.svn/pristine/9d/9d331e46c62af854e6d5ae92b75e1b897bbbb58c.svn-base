package it.ltc.model.db;

import it.ltc.logica.database.orm.ColumnList;
import it.ltc.logica.database.orm.Entity;

public class Marchio implements Entity {
	
	private static final String nomeTabella = "dbo.Marchi";
	private static final ColumnList variabili = new ColumnList();

	private Integer id;
	private Integer codice;
	private String nome;
	
	public String getNomeTabella() {
		return nomeTabella;
	}

	public ColumnList getVariabili() {
		if (variabili.isEmpty()) {
			variabili.addAutoincrement("IdMarchio", "id");
			variabili.addInt("Codice", "codice");
			variabili.addString("Descrizione", "nome");
		}
		return variabili;
	}

	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}

	public Integer getCodice() {
		return codice;
	}

	public void setCodice(Integer codice) {
		this.codice = codice;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

}
